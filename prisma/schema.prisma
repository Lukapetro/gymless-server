generator client {
  provider = "prisma-client-js"
}

datasource postgresql {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  user
  trainer
  admin
}

enum Sex {
  male
  female
  unknown
}

model User {
  id         Int       @default(autoincrement()) @id
  name       String?
  email      String    @unique
  password   String
  bio        String?
  stripeId   String?
  facebookId String?
  train      Workout[] @relation("Train")
  workouts   Workout[]
  role       Role      @default(user)
  sex        Sex       @default(unknown)
  birthDate  DateTime?
  avatarId   String?
}

model Workout {
  id          Int       @default(autoincrement()) @id
  title       String
  createdAt   DateTime  @default(now())
  description String?
  location    String?
  price       Int?
  duration    Int?
  spots       Int       @default(25)
  date        DateTime?
  trainerId   Int
  trainer     User      @relation("Train", fields: [trainerId], references: [id])

  partecipants User[]     @relation(references: [id])
  cordinates   Cordinates @relation(fields: [cordinatesId], references: [id])
  cordinatesId Int
}

model Cordinates {
  id        Int       @id @default(autoincrement())
  city      String?
  address   String?
  latitude  Float?
  longitude Float?
  workout   Workout[]
}
